<h2>Upload File</h2>

<!-- Form to upload a file -->
<form asp-controller="UploadFileForm" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <!-- File input section -->
    <div class="form-group">
        <label for="fileInput">Select a file to upload:</label>
        <input type="file" class="form-control" id="fileInput" name="formFile" aria-describedby="fileHelp" />
        @* Show specific error if any for file field *@
        @if (ViewData.ModelState.ContainsKey("File") && ViewData.ModelState["File"]?.Errors.Count > 0)
        {
            <small id="fileHelp" class="form-text text-danger">
                @ViewData.ModelState["File"]?.Errors.FirstOrDefault()?.ErrorMessage
            </small>
        }
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@* Display general errors from ModelState *@
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@* Display message of success or failure of the operation *@
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}


